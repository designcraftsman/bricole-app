<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_dark"
        android:layout_marginBottom="32dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/user_solid"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous êtes ?"
        android:textSize="28sp"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        >

        <!-- Button 1: Employer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnEmployer"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:text="Employeur"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableTop="@drawable/employer"
            android:gravity="center"
            android:backgroundTint="@android:color/transparent"

            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <!-- Button 2: Job Seeker -->
        <Button
            android:id="@+id/btnJobSeeker"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="À la recherche d’un travail"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableTop="@drawable/job_seeker"
            android:gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous avez déjà un compte? "
            android:textSize="14sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s’identifier"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>
