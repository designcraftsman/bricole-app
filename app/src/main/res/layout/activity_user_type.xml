<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/orange"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_dark"
        android:layout_marginBottom="32dp"/>

    <!-- User Icon -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:tint="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- "Vous êtes ?" Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous êtes ?"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Button 1: Employer -->
        <Button
            android:id="@+id/btnEmployer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Employeur"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableTop="@drawable/ic_employer"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <!-- Button 2: Job Seeker -->
        <Button
            android:id="@+id/btnJobSeeker"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="À la recherche d’un travail"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:drawableTop="@drawable/ic_worker"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Sign-in Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous avez déjà un compte? "
        android:textSize="14sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s’identifier"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:clickable="true"/>
</LinearLayout>
